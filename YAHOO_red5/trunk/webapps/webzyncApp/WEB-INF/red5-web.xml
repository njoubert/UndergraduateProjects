<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:lang="http://www.springframework.org/schema/lang"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-2.0.xsd">

	<bean id="placeholderConfig" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	    <property name="location" value="/WEB-INF/red5-web.properties" />
	</bean>
	
	<bean id="DbLogger" class="org.red5.server.webapp.webzyncApp.db.DbLogger">
		<property name="username" value="root"/>
		<property name="password" value="yrbtimetags"/>
		<property name="dbUrl" value="jdbc:mysql://cs2.berkeley.corp.yahoo.com/webzync"/>
		<property name="enable" value="true"/>
	</bean>

	<bean id="web.context" class="org.red5.server.Context"
		autowire="byType" />

	<bean id="web.scope" class="org.red5.server.WebScope" init-method="register">
		<property name="server" ref="red5.server" />
		<property name="parent" ref="global.scope" />
		<property name="context" ref="web.context" />
		<property name="handler" ref="web.handler" />
		<property name="contextPath" value="${webapp.contextPath}" />
		<property name="virtualHosts" value="${webapp.virtualHosts}" />
	</bean>

	<bean id="web.handler" class="org.red5.server.webapp.webzyncApp.Application">
		<property name="authUrl" value="http://cs2.berkeley.corp.yahoo.com/webzync/auth_user.php" />
	</bean>    

	<bean class="org.springframework.scripting.support.ScriptFactoryPostProcessor"/>

</beans>